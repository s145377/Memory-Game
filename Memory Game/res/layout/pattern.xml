<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pattern"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <Button android:text="Button"
        android:id="@+id/patterns"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="18dp"
        android:layout_toRightOf="@+id/pattern1x2"
        android:background="#000000" />

    <Button
        android:id="@+id/info"
        android:layout_width="290dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:background="#FFFFFF"
        android:textColor="#FF0000"/>

    <Button
        android:id="@+id/pattern2x4"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignRight="@+id/info"
        android:layout_below="@+id/pattern1x4"
        android:layout_marginTop="13dp"
        android:background="#FFFFFF" />

    <Button
        android:id="@+id/pattern4x4"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/pattern3x4"
        android:layout_below="@+id/pattern3x4"
        android:layout_marginTop="12dp"
        android:background="#FFFFFF" />

    <Button
        android:id="@+id/pattern3x4"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/pattern2x4"
        android:layout_below="@+id/pattern2x4"
        android:layout_marginTop="13dp"
        android:background="#FFFFFF" />

    <Button
        android:id="@+id/pattern3x1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignBaseline="@+id/pattern3x2"
        android:layout_alignBottom="@+id/pattern3x2"
        android:layout_toLeftOf="@+id/pattern1x2"
        android:background="#FFFFFF" />

    <Button
        android:id="@+id/pattern4x1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignBaseline="@+id/pattern4x3"
        android:layout_alignBottom="@+id/pattern4x3"
        android:layout_toLeftOf="@+id/pattern1x2"
        android:background="#FFFFFF" />

    <Button
        android:id="@+id/pattern3x3"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_above="@+id/pattern4x4"
        android:layout_alignLeft="@+id/pattern2x3"
        android:background="#FFFFFF" />

    <Button
        android:id="@+id/pattern4x3"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignBaseline="@+id/pattern4x4"
        android:layout_alignBottom="@+id/pattern4x4"
        android:layout_alignLeft="@+id/pattern3x3"
        android:background="#FFFFFF" />

    <Button
        android:id="@+id/pattern1x3"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_above="@+id/pattern2x4"
        android:layout_alignLeft="@+id/patterns"
        android:background="#FFFFFF" />

    <Button
        android:id="@+id/pattern3x2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_above="@+id/pattern4x4"
        android:layout_alignLeft="@+id/pattern4x2"
        android:background="#FFFFFF" />

    <Button
        android:id="@+id/pattern4x2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignBaseline="@+id/pattern4x1"
        android:layout_alignBottom="@+id/pattern4x1"
        android:layout_alignLeft="@+id/pattern2x2"
        android:background="#FFFFFF" />

    <Button
        android:id="@+id/pattern2x1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_above="@+id/pattern3x4"
        android:layout_alignLeft="@+id/pattern3x1"
        android:background="#FFFFFF" />

    <Button
        android:id="@+id/pattern1x1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_above="@+id/pattern2x4"
        android:layout_alignLeft="@+id/info"
        android:background="#FFFFFF" />

    <Button
        android:id="@+id/pattern2x3"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignBaseline="@+id/pattern2x4"
        android:layout_alignBottom="@+id/pattern2x4"
        android:layout_alignLeft="@+id/pattern1x3"
        android:background="#FFFFFF" />

    <Button
        android:id="@+id/pattern2x2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignBaseline="@+id/pattern2x3"
        android:layout_alignBottom="@+id/pattern2x3"
        android:layout_alignLeft="@+id/pattern1x2"
        android:background="#FFFFFF" />

    <Button
        android:id="@+id/pattern1x2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_above="@+id/pattern2x4"
        android:layout_marginLeft="18dp"
        android:layout_toRightOf="@+id/pattern1x1"
        android:background="#FFFFFF" />

    <Button
        android:id="@+id/pattern1x4"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/pattern2x4"
        android:layout_alignParentTop="true"
        android:layout_marginTop="65dp"
        android:background="#FFFFFF" />


</RelativeLayout>